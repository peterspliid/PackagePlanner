<h1 class="title">@ViewBag.Title</h1>


<div class="container">
    <div class="row">
        <div class="col-sm main-form">
            <div class="destination-selector">
                <label class="destination-selector__label">From</label>
                <select id="from-field" class="form-control">
                    @foreach (PackagePlanner.Models.City city in ViewBag.Cities)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>

            <div class="destination-selector">
                <label class="destination-selector__label">To</label>
                <select id="to-field" class="form-control">
                    @foreach (PackagePlanner.Models.City city in ViewBag.Cities)
                    {
                        <option value="@city.Id">@city.Name</option>
                    }
                </select>
            </div>
            <div class="destination-selector">
                <label class="destination-selector__label">Weight</label>
                <input id="weight-field" type="number" min="0" placeholder="Weight..." class="form-control" />
            </div>

            <div class="destination-selector">
                <label class="destination-selector__label">Type</label>
                <select id="type-field" class="form-control">
                    @foreach (PackagePlanner.Models.CargoType cargoType in ViewBag.CargoTypes)
                    {
                        <option value="@cargoType.Id">@cargoType.Name</option>
                    }
                </select>
            </div>

            <div class="destination-selector">
                <label class="destination-selector__label">Package Size</label>
                <div class="text-input-group">
                    <input id="size-length" type="number" min="0" placeholder="Length" class="form-control" />
                    <input id="size-width" type="number" min="0" placeholder="Width" class="form-control" />
                    <input id="size-height" type="number" min="0" placeholder="Height" class="form-control" />
                </div>
            </div>
            
            <div class="text-input-group">
                <div class="destination-selector">
                    <label class="destination-selector__label">Customer ID</label>
                    <select id="customerId-input" class="form-control">
                        @foreach (PackagePlanner.Models.Customer customer in ViewBag.Customers)
                        {
                            <option value="@customer.id">@customer.Name</option>
                        }
                    </select>
                </div>

                <div class="destination-selector">
                    <label class="destination-selector__label">Discount</label>
                    <input id="discount-input" value="0" type="number" min="0" max="15" maxlength="2" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="main-logo">
                <img src="/Img/PackagePlannerLogo-desktop.png" />
            </div>
        </div>
    </div>
</div>

<div class="row go-button">
    <button id="go-button" class="btn btn-light">Check</button>
</div>

<div class="spinner" id="spinner">
    <img class="spinner-icon" src="/Img/spinner.png" />
</div>

<div id="error-view" class="error">
    <p class="error-message"></p>
</div>

<div id="results-list" class="form-control results-list">
    <div class="results__row">
        <h2 class="destination-selector__label">Best</h2>
        <div class="result-info">
            <div class="result-info__section">
                <span class="result-metric">Time:</span>
                <span id="best-time" class="result-amount"></span>
                <span class="result-unit">hours</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Price:</span>
                <span id="best-price" class="result-amount"></span>
                <span class="result-unit">dollars</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Route:</span>
                <span id="best-route" class="result-amount"></span>
            </div>
        </div>
        <button id="select-best-button" class="results__select btn btn-light">Select</button>
    </div>
    <div class="results__row">
        <h2 class="destination-selector__label">Fastest</h2>
        <div class="result-info">
            <div class="result-info__section">
                <span class="result-metric">Time:</span>
                <span id="fastest-time" class="result-amount"></span>
                <span class="result-unit">hours</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Price:</span>
                <span id="fastest-price" class="result-amount"></span>
                <span class="result-unit">dollars</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Route:</span>
                <span id="fastest-route" class="result-amount"></span>
            </div>
        </div>
        <button id="select-fastest-button" class="results__select btn btn-light">Select</button>
    </div>
    <div class="results__row">
        <h2 class="destination-selector__label">Cheapest</h2>
        <div class="result-info">
            <div class="result-info__section">
                <span class="result-metric">Time:</span>
                <span id="cheapest-time" class="result-amount"></span>
                <span class="result-unit">hours</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Price:</span>
                <span id="cheapest-price" class="result-amount"></span>
                <span class="result-unit">dollars</span>
            </div>
            <div class="result-info__section">
                <span class="result-metric">Route:</span>
                <span id="cheapest-route" class="result-amount"></span>
            </div>
        </div>
        <button id="select-cheapest-button" class="results__select btn btn-light">Select</button>
    </div>
</div>